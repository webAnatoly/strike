mixin card-small(opt)
  .card-small(class= opt ? opt.cssClass : '')
    .card-small__icon-holder
      .card-small__img
      <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="58px" height="54px" viewBox="0 0 58 58" class="card-small__img">
      <image  x="0px" y="0px" width="58px" height="54px" xlink:href="data:img/png;base64," />
      </svg>
    p.card-small__text= opt.text